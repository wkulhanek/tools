{
  /*
  	// Place your snippets for AsciiDoc here. Each snippet is defined under a snippet name and has a prefix, body and 
  	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
  	// same ids are connected.
  	// Example:
  	"Print to console": {
  		"prefix": "log",
  		"body": [
  			"console.log('$1');",
  			"$2"
  		],
  		"description": "Log output to console"
  	}
  */
  "Command without Example Output": {
    "prefix": "cmd",
    "body": [
      "+",
      "[source,bash]",
      "----",
      "$1",
      "----",
      "$2"
    ],
    "description": "Create a new command without example output"
  },
  "Command with Example Output": {
    "prefix": "cmdo",
    "body": [
      "+",
      "[source,bash]",
      "----",
      "$1",
      "----",
      "+",
      "Expect the output to look similar to this:",
      "+",
      "[source,text]",
      "----",
      "$2",
      "----",
      "$3"
    ],
    "description": "Create a new command with example output"
  },
  "New Slide": {
    "prefix": "slide",
    "body": [
      "== ${1:Slide Title}",
      ":scrollbar:",
      ":data-uri:",
      ":noaudio:",
      "",
      "$2",
      "",
      "ifdef::showscript[]",
      "=== Transcript",
      "",
      "endif::showscript[]"
    ],
    "description": "Create a new Slide"
  },
  "Assessment Question (Binary)": {
    "prefix": "aqb",
    "body": [
      "DEVOPS|DEVOPS$1|5|$2|||TRUE|||1|100|||",
      "DEVOPS|DEVOPS$1|5|$2|||FALSE|||0|0|||",
      "$3"
    ],
    "description": "Create a new Binary Assessment Question"
  },
  "Assessment Question (Multiple Choice)": {
    "prefix": "aqm",
    "body": [
      "DEVOPS|DEVOPS$1|1|$2|||${3:Answer 1}|||1|100|||",
      "DEVOPS|DEVOPS$1|1|$2|||${4:Answer 2}|||0|0|||",
      "DEVOPS|DEVOPS$1|1|$2|||${5:Answer 3}|||0|0|||",
      "DEVOPS|DEVOPS$1|1|$2|||${6:Answer 4}|||0|0|||",
      "$7"
    ],
    "description": "Create a new Multiple Choice Assessment Question"
  }
}